<div class="entireBody">
	<h1>Registration numbers</h1>
<div class="error">
	{{#if messages.info}}
	<h3>{{messages.info}}</h3>

	{{/if}}
</div>

	<form action="reg_numbers" method="POST">
		<div>
			<input type="text" name="regNumberEntered" class="regNumberEntered" placeholder="enter a registration number">
			<button class="addRegNumberBtnBlue"><strong>Add Reg number</strong></button>
			</br>
		</div>
	</form>
	<br>

<form action="reg_numbers" method="GET">
		<div class="filter">

			<input type="radio" name="town" value="All">Show all
			<input type="radio" name="town" value="1">Botshabelo
			<input type="radio" name="town" value="2">Bloemfontein
			<input type="radio" name="town" value="3"> Thaba Nchu
			</br></br>

			<button><strong>Filter by town</strong></button></br>
			
	</form>
	<br>

	<div>
		{{!-- <a href="/res">Visit W3Schools.com!</a> --}}

		<a href="/reset" class="deco"><strong>Clear</strong></a>

	</div>

	<hr>
	<div class="message">
		{{#each msg}}
	<ul class='regiplate'>
		{{this.numberplate}}
		</ul>	
		{{/each}}
		{{!-- <h1> {{messages.info}}</h1> --}}
	</div>


</div>